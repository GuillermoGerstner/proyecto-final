<main class="main-container">
    <section class="content-contact">
        <form action="/send-message" method="post">
            <article class="owner">
                <h2 class="owner__text">"Send your email below."</h2>
            </article>
            <article class="input__sector">
                <label class="input__sector-tag" for="name">Name:</label>
                <input class="input__sector-box" type="text" name="name" id="name" required autofocus>
            </article>
            <article class="input__sector">
                <label class="input__sector-tag" for="email">Email adress:</label>
                <input class="input__sector-box" type="email" name="email" id="email" required>
            </article>
            <article class="input__sector">
                <label class="input__sector-tag" for="message">Message:</label>
                <textarea class="input__sector-box-message" name="message" id="message" cols="30" rows="10" required maxlength="500"></textarea>
            </article>
            <button class="input__button">Send Message</button>
        </form>
    </section>
</main>