                <form action="/users/signin" method="post" class="products__card-form">
                    <div class="form-group">
                        <input type="email" class="form-control products__input" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control products__input" name="password" placeholder="Password">
                    </div>
