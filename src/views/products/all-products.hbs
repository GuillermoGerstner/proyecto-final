<div class="flex products__add">
    <h4 class="products__add-title">
        Add Product
    </h4>
    <a class="products__add-icon" href="/products/add">
        <i class="fa-regular fa-square-plus fa-2x"></i>
    </a>
</div>
<div class="row">
    {{#each products}}
        <div class="col-md-3">
            <div class="card products__item">
                <div class="card-body product">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/products/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>
                        {{description}} <br>
                        Amount: {{amount}}
                    </p>
                    <form action="/products/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-block btn-sm">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>