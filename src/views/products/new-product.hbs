
<div class="col-md-4 mx-auto test">
    <div class="card">
        <div class="card-header text-center">
            <h3>New Product</h3>
        </div>
        <div class="card-body">
            <form action="/products/new-product" method="post">
                <div class="form-group mb10">
                    <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                </div>
                <div class="form-group mb10">
                    <textarea name="description" placeholder="Description" class="form-control"></textarea>
                </div>
                <div class="form-group mb10">
                    <input type="number" name="amount" class="form-control" placeholder="0">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>