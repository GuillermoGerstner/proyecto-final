<main class="main-container">
    <section class="content-contact">
        <form action="/send-order" method="post">
            <article class="owner">
                <h2 class="owner__text">"Send your design below."</h2>
            </article>
            <article class="input__sector">
                <label class="input__sector-tag" for="name">Name:</label>
                <input class="input__sector-box" type="text" name="name" id="name" required autofocus>
            </article>
            <article class="input__sector">
                <label class="input__sector-tag" for="email">Email adress:</label>
                <input class="input__sector-box" type="email" name="email" id="email" required>
            </article>
            <article class="input__sector">
                <label class="input__sector-tag" for="file">Files:</label>
                <input class="input__sector-file" type="file" name="file" id="file" multiple></label>
            </article>
            <button class="input__button">Send Order</button>
        </form>
    </section>
</main>