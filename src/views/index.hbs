    <article class="gallery-modal">
        <div class="gallery-modal__close-container">
            <img class="gallery-modal__close" src="img/icon-close.svg" alt="icon_close">
        </div>
        <div class="gallery-modal__image-container">
            <img class="gallery-modal__previous" src="img/icon-previous.svg" alt="previous">
            <img class="gallery-modal__next" src="img/icon-next.svg" alt="next">
        </div>
        <div class="gallery-modal__thumbnails">
            <img id="m1" class="gallery-modal__thumbnail" src="img/image-product-1-thumbnail.jpg" alt="thumnail">
            <img id="m2" class="gallery-modal__thumbnail" src="img/image-product-2-thumbnail.jpg" alt="thumnail">
            <img id="m3" class="gallery-modal__thumbnail" src="img/image-product-3-thumbnail.jpg" alt="thumnail">
            <img id="m4" class="gallery-modal__thumbnail" src="img/image-product-4-thumbnail.jpg" alt="thumnail">
        </div>
    </article>
</div>
